{
  repository : "../../../caesaria"
  output : "."
  archives :
  {
    houses :
    {
      size : [ 2048, 2048 ]
      margin : 2
      ignorePath : true
      floatCoordinates : false
      name : "houses"
      archive : "resources/gfx/pics_house"

      info : {
        atlas : [ "housng1a1.atlas" ]
      }

      items :
      {
        atlas :
        {
          type : "atlas"
          folder : "/resources/houses"
          files : [ "housng1a_*" ]
        }

        once :
        {
          type : "file"
          folder : "/resources/houses"
          files : [ "housgn1a1.atlas"
                    "housgn1a1.png" ]
        }
      }
    }

    carts:
    {
      size : [ 2048, 2048 ]
      margin : 1
      ignorePath : true
      floatCoordinates : false
      name : "carts"
      archive : "resources/gfx/pics_carts"

      items :
      {
        clay :
        {
          type : "atlas"
          folder : "/resources/carts/clay"
          files : [ "cartclay_*" ]
        }
      }
    }
  }
}
